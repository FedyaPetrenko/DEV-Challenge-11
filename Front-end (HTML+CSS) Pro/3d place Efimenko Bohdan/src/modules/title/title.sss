.c-title
  font-size: 1rem
  color: var(--tColorL)
  font-weight: 800
  @media (max-width: 767px)
    font-size: .8rem
  &__inner
    font-size: em(64)
.c-title-wrapper
  display: flex
  align-items: baseline
  @media (max-width: 767px)
    flex-direction: column
  &__item
    margin-left: 10px
    @media (max-width: 767px)
      margin-left: 0
      margin-top: 10px
